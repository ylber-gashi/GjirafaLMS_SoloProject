<div class="login-container">
    <div class="myCard">
        <div class="row">
            <div class="col-md-6">
                <div class="myLeftCtn">
                    <form class="myForm text-center" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <header>Sign In</header>
                        <div class="form-group">
                            <i class="fas fa-user"></i>
                            <input class="myInput" asp-for="Email" placeholder="Email">
                        </div>
                        <div class="form-group">
                            <i class="fas fa-envelope"></i>
                            <input class="myInput" asp-for="Password" placeholder="Password">
                        </div>
                        <div class="form-group">
                            <label asp-for="RememberMe">
                                <input class="form-check-input" asp-for="RememberMe">
                                @Html.DisplayNameFor(m => m.RememberMe)
                            </label>
                        </div>
                        <input type="submit" class="butt" value="Login">
                    </form>
                    <div class="mt-5 text-center">
                        <a class="m-auto" href="/account/register">Don't have an account? Register</a>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="myRightCtn">
                    <img src="https://image.winudf.com/v2/image1/Z2ppcmFmYS5jb21faWNvbl8xNTUzODA4NDUzXzA4MQ/icon.png?w=&fakeurl=1"
                        id="register-logo" alt="Gjirafa Logo">
                </div>
            </div>
        </div>
    </div>
</div>