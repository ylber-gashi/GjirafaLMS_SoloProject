@inject UserManager<User> userManager;
@{
    var user = @userManager.GetUserAsync(User).Result;
}
@model EditInfoModel
<div class="card shadow mb-3">
    <div class="card-header py-3">
        <p class="text-primary m-0 font-weight-bold">User Info</p>
    </div>
    <div class="card-body">
        <form method="POST" asp-action="EditInfo" asp-controller="Account">
            <input type="hidden" asp-for="InfoUserId" value="@user.Id">
            <div class="form-row">
                <div class="col">
                    <span asp-validation-for="InfoFirstName" class="text-danger"></span>
                    <div class="form-group"><label asp-for="InfoFirstName"><strong>First
                                Name</strong></label><input class="form-control" asp-for="InfoFirstName" value="@user.FirstName"
                            placeholder="First Name"></div>
                </div>
                <div class="col">
                    <span asp-validation-for="InfoLastName" class="text-danger"></span>
                    <div class="form-group"><label asp-for="InfoLastName"><strong>Last
                                Name</strong></label><input class="form-control" asp-for="InfoLastName"
                            placeholder="Last Name" value="@user.LastName"></div>
                </div>
            </div>
            <div class="form-row">
                <div class="col">
                    <span asp-validation-for="InfoEmail" class="text-danger"></span>
                    <div class="form-group"><label asp-for="InfoEmail"><strong>Email
                                Address</strong></label><input class="form-control" asp-for="InfoEmail" value="@user.Email" placeholder="Email">
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="col">
                    <span asp-validation-for="InfoProfileImgUrl" class="text-danger"></span>
                    <div class="form-group"><label asp-for="InfoProfileImgUrl"><strong>Profile Image
                                URL</strong></label><input class="form-control" value="@user.ProfileImgUrl" asp-for="InfoProfileImgUrl"
                            placeholder="Image URL"></div>
                </div>
            </div>
            <div class="form-group"><button class="btn btn-primary" type="submit">Save</button></div>
        </form>
    </div>
</div>