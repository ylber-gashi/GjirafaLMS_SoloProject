@{
    ViewData["Title"] = "Register";
}
@model RegisterViewModel

<div class="login-container">
    <div class="myCard">
        <div class="row">
            <div class="col-md-6">
                <div class="myLeftCtn">
                    <form class="myForm text-center" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <header>Sign Up</header>
                        <div class="form-group">
                            <i class="fas fa-user"></i>
                            <input class="myInput" asp-for="FirstName" placeholder="First Name">
                        </div>
                        <div class="form-group">
                            <i class="fas fa-user"></i>
                            <input class="myInput" asp-for="LastName" placeholder="Last Name">
                        </div>
                        <div class="form-group">
                            <i class="fas fa-user"></i>
                            <input class="myInput" asp-for="ProfileImgUrl" placeholder="Profile Image">
                        </div>
                        <div class="form-group">
                            <i class="fas fa-user"></i>
                            <input class="myInput" asp-for="Address" placeholder="Address">
                        </div>
                        <div class="form-row">
                            <div class="col">
                                <div class="form-group">
                                    <i class="fas fa-user"></i>
                                    <input class="myInput" asp-for="City" placeholder="City">
                                </div>
                            </div>
                            <div class="col">
                                <div class="form-group">
                                    <i class="fas fa-user"></i>
                                    <input class="myInput" asp-for="Country" placeholder="Country">
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <i class="fas fa-user"></i>
                            <input class="myInput" asp-for="Email" placeholder="Email">
                        </div>
                        <div class="form-group">
                            <i class="fas fa-envelope"></i>
                            <input class="myInput" asp-for="Password" placeholder="Password">
                        </div>
                        <div class="form-group">
                            <i class="fas fa-envelope"></i>
                            <input class="myInput" asp-for="ConfirmPassword" placeholder="Confirm Password">
                        </div>
                        <input type="submit" class="butt" value="Register">
                    </form>
                    <div class="mt-5 text-center">
                        <a class="m-auto" href="/account/login">Already have an account? Login</a>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="myRightCtn">
                    <img src="https://image.winudf.com/v2/image1/Z2ppcmFmYS5jb21faWNvbl8xNTUzODA4NDUzXzA4MQ/icon.png?w=&fakeurl=1"
                        id="register-logo" alt="Gjirafa Logo">
                </div>
            </div>
        </div>
    </div>
</div>

