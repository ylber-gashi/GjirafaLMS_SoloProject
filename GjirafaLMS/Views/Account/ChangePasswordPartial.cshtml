@inject UserManager<User> userManager;
@{
    var user = @userManager.GetUserAsync(User).Result;
}
@model ChangePasswordModel
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="text-primary font-weight-bold m-0">Change Password</h6>
    </div>
    <div class="card-body">
        <form method="POST" asp-action="ChangePassword" asp-controller="Account">
            <input type="hidden" asp-for="UserId" value="@user.Id">
            <div class="form-row">
                <div class="col">
                    <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                    <div class="form-group"><label asp-for="CurrentPassword"><strong>Current Password</strong></label>
                        <input class="form-control" asp-for="CurrentPassword" placeholder="Current Password">
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="col">
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                    <div class="form-group"><label asp-for="NewPassword"><strong>New Password</strong></label>
                        <input class="form-control" asp-for="NewPassword" placeholder="New Password">
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="col">
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    <div class="form-group"><label asp-for="ConfirmPassword"><strong>Confirm Password</strong></label>
                        <input class="form-control" asp-for="ConfirmPassword" placeholder="Confirm Password">
                    </div>
                </div>
            </div>
            <div class="form-group"><button class="btn btn-primary btn-sm" type="submit">Save</button></div>
        </form>
    </div>
</div>